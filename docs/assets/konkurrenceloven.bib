@article{konkurrenceloven23gstk4,
 author = {Erhvervsministeriet},
 date = {2024-11-13},
 journal = {Bekendtgørelse af konkurrenceloven},
 publisher = {retsinformation.dk},
 title = {§23g Stk. 4. Når Konkurrence- og Forbrugerstyrelsen modtager en forkortet ansøgning, kontrollerer styrel- sen, om den på tidspunktet for modtagelsen heraf allerede har modtaget en forkortet eller fuldstændig ansøgning om bødelempelse fra en anden ansøger vedrørende det samme kartel. Har Konkurrence- og Forbrugerstyrelsen ikke modtaget en sådan ansøgning fra en anden ansøger og anser den forkortede ansøgning for at opfylde kravene i stk. 2, underretter styrelsen ansøgeren herom.},
