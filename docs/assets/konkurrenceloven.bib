@article{konkurrenceloven23astk2,
 author = {Erhvervsministeriet},
 date = {2024-11-13},
 journal = {Bekendtgørelse af konkurrenceloven},
 publisher = {retsinformation.dk},
 title = {§23a Stk. 2. Er en virksomhedssammenslutning ikke solvent og kan den derfor ikke betale en bøde, den er blevet pålagt for overtrædelse af § 6 eller § 11 eller EUF-traktatens artikel 101 eller 102, udmålt på grundlag af medlemsvirksomhedernes omsætning, skal sammenslutningen inden for en frist fastsat af Konkurrence- og Forbrugerstyrelsen indkalde bidrag fra medlemsvirksomhederne til betaling af bøden.},
